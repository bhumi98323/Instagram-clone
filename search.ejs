<% include ./partials/header.ejs %>
  <div class="w-full min-h-screen bg-zinc-900 px-4 py-5">
    <div class="border-2 border-zinc-800 flex items-center justify-between px-2 py-1 rounded-md">
        <i class="text-white ri-search-line"></i>
        <input class=" inp ml-1 w-full bg-zinc-900 outline-none text-zinc-400" type="text" placeholder="search username">
    </div>
    <div class="users">
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/axios@1.6.7/dist/axios.min.js"></script>
<script>
         document.querySelector(".inp")
         .addEventListener("input", function(){
          var typed = this.value;
          axios.get(`/user/${typed}`)
          .then(function(response){
            var clutter = "";

            response.data.forEach((elem)=>{
               clutter += `<a href="/profile" class="outline-none">
            <div class="text-white flex items-center gap-2 mt-5">
                <div class="image w-[11vw] h-[11vw] rounded-full bg-sky-100 overflow-hidden">
                  <img class= "w-full h-full" object-cover src = "/images/uploads/${elem.profilepicture}"/>
                  </div>
                <div class="text">
                    <h3>${elem.username}</h3>
                    <h4 class="text-xs opacity-30 leading-none">${elem.name}</h4>
                </div>
            </div>            
        </a>`
            });
            document.querySelector('.users')
            .innerHTML = clutter
          })

         })
</script>
